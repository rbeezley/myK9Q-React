/**
 * Utility CSS Classes
 *
 * Common reusable CSS patterns used across the application.
 * These utilities help maintain consistency and reduce CSS duplication.
 */

/* =================================================================
   Responsive Grid Utilities - GLOBAL
   ================================================================= */

/* Standard responsive card grid - 1/2/3 columns */
.grid-responsive {
  display: grid;
  gap: var(--token-space-lg);
  grid-template-columns: 1fr;
}

/* Standard responsive card grid - 1/2/4 columns */
.grid-responsive-4 {
  display: grid;
  gap: var(--token-space-lg);
  grid-template-columns: 1fr;
}

/* Auto-fill grid with minimum item width */
.grid-auto-fill {
  display: grid;
  gap: var(--token-space-lg);
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
}

/* Fixed 2 column grid */
.grid-cols-2 {
  display: grid;
  gap: var(--token-space-lg);
  grid-template-columns: repeat(2, 1fr);
}

/* Fixed 3 column grid */
.grid-cols-3 {
  display: grid;
  gap: var(--token-space-lg);
  grid-template-columns: repeat(3, 1fr);
}

/* Gap variations */
.grid-gap-sm { gap: var(--token-space-sm); }
.grid-gap-md { gap: var(--token-space-md); }
.grid-gap-lg { gap: var(--token-space-lg); }
.grid-gap-xl { gap: var(--token-space-xl); }
.grid-gap-2xl { gap: var(--token-space-2xl); }

/* Tablet breakpoint (640px+) */
@media (min-width: 640px) {
  .grid-responsive {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--token-space-xl);
  }

  .grid-responsive-4 {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Desktop breakpoint (1024px+) */
@media (min-width: 1024px) {
  .grid-responsive {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--token-space-2xl);
  }

  .grid-responsive-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  /* Allow desktop override for 2 columns */
  .grid-responsive.desktop-2-cols {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* =================================================================
   Container Utilities
   ================================================================= */

.app-container {
  min-height: 100vh;
  background: var(--background);
  padding-bottom: var(--token-space-4xl);
}

/* Loaded state - enables smooth transitions after content loads */
.loaded * {
  transition: opacity 0.3s ease, transform 0.3s ease;
}

/* =================================================================
   Button Utilities
   ================================================================= */

/* Standard icon button - bordered style with proper touch targets */
.icon-button {
  background: var(--secondary);
  border: 1px solid var(--border);
  border-radius: 0.75rem;
  padding: var(--token-space-lg);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  color: var(--foreground);
  min-width: 44px;
  min-height: 44px;
}

.icon-button:hover:not(:disabled) {
  background: var(--muted);
  transform: translateY(-1px);
  box-shadow: 0 var(--token-space-sm) var(--token-space-lg) rgba(0, 0, 0, 0.1);
}

.icon-button:active:not(:disabled) {
  transform: scale(0.95);
}

.icon-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

/* Transparent variant for borderless icon buttons */
.icon-button-transparent {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--token-space-md);
  background: transparent;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
  color: var(--foreground);
}

.icon-button-transparent:hover:not(:disabled) {
  background: var(--muted);
  transform: scale(1.05);
}

.icon-button-transparent:active:not(:disabled) {
  transform: scale(0.95);
}

.icon-button-transparent:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* =================================================================
   Clear/Close Button
   ================================================================= */

.clear-search-btn,
.clear-btn {
  position: absolute;
  right: 1.75rem;
  top: 50%;
  transform: translateY(-50%);
  padding: var(--token-space-sm);
  background: transparent;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.25rem;
  color: var(--muted-foreground);
  transition: all 0.2s ease;
}

.clear-search-btn:hover,
.clear-btn:hover {
  background: var(--muted);
  color: var(--foreground);
}

/* =================================================================
   Loading States
   ================================================================= */

.loading-spinner {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 3rem;
  color: var(--muted-foreground);
}

.loading-spinner svg {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* =================================================================
   Card Utilities
   ================================================================= */

.card-base {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 0.75rem;
  padding: var(--token-space-xl);
  transition: all 0.2s ease;
}

.card-base.clickable {
  cursor: pointer;
}

.card-base.clickable:hover {
  box-shadow: 0 var(--token-space-sm) var(--token-space-lg) rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
}

.card-base.clickable:active {
  transform: translateY(0);
}

/* =================================================================
   Badge Utilities
   ================================================================= */

.badge-base {
  display: inline-flex;
  align-items: center;
  padding: var(--token-space-sm) var(--token-space-lg);
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 600;
  white-space: nowrap;
}

.badge-primary {
  background: var(--primary);
  color: white;
}

.badge-success {
  background: var(--token-success);
  color: white;
}

.badge-warning {
  background: #fef3c7;
  color: white;
}

.badge-danger {
  background: #ef4444;
  color: white;
}

.badge-muted {
  background: var(--muted);
  color: var(--muted-foreground);
}

/* Status Badge - Squared corners for status indicators */
.status-badge {
  padding: var(--token-space-lg) var(--token-space-xl);
  border-radius: var(--token-space-md);
  font-size: 0.875rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.025em;
  border: 1px solid transparent;
  display: inline-block;
  transition: all 0.3s ease;
  min-height: var(--comfortable-touch-target); /* 36px - comfortable tap target */
}

.status-badge.clickable {
  cursor: pointer;
  transition: all 0.2s;
  background: transparent;
}

.status-badge.clickable:hover {
  transform: translateY(-1px);
  box-shadow: 0 var(--token-space-xs) var(--token-space-sm) rgba(0, 0, 0, 0.1);
}

/* Class Status Colors - Solid backgrounds with white text */
/* Default for all class status badges - fallback gray for any undefined status */
.class-status-badge {
  background: var(--status-none);
  color: var(--status-none-text);
}

.status-badge.no-status {
  background: var(--status-none);
  color: var(--status-none-text);
}

.status-badge.setup {
  background: var(--status-setup);
  color: var(--status-setup-text);
}

.status-badge.briefing {
  background: var(--status-briefing);
  color: var(--status-briefing-text);
}

.status-badge.break {
  background: var(--status-break);
  color: var(--status-break-text);
}

.status-badge.start-time {
  background: var(--status-start-time);
  color: var(--status-start-time-text);
}

.status-badge.in-progress {
  background: var(--status-in-progress);
  color: var(--status-in-progress-text);
}

.status-badge.completed {
  background: var(--status-completed);
  color: var(--status-completed-text);
}

/* Entry Check-in Status Colors */
.status-badge.checked-in,
.checkin-status.checked-in {
  background: var(--status-checked-in, #10b981);
  color: white;
}

.status-badge.at-gate,
.checkin-status.at-gate {
  background: var(--status-at-gate, #8b5cf6);
  color: white;
}

.status-badge.conflict,
.checkin-status.conflict {
  background: var(--status-conflict, #f59e0b);
  color: white;
}

.status-badge.pulled,
.checkin-status.pulled {
  background: var(--status-pulled, #ef4444);
  color: white;
}

.status-badge.pending,
.checkin-status.none {
  background: var(--status-not-checked-in, #6b7280);
  color: white;
}

/* Entry Result Status Colors */
.status-badge.qualified {
  background: rgba(16, 185, 129, 0.1);
  color: var(--token-success);
  border-color: rgba(16, 185, 129, 0.2);
}

.status-badge.not-qualified {
  background: rgba(239, 68, 68, 0.1);
  color: var(--token-error);
  border-color: rgba(239, 68, 68, 0.2);
}

.status-badge.excused {
  background: rgba(156, 163, 175, 0.1);
  color: var(--token-text-tertiary);
  border-color: rgba(156, 163, 175, 0.2);
}

/* =================================================================
   Text Utilities
   ================================================================= */

.text-muted {
  color: var(--muted-foreground);
}

.text-primary {
  color: var(--primary);
}

.text-success {
  color: var(--token-success);
}

.text-warning {
  color: var(--status-setup);
}

.text-danger {
  color: var(--token-error);
}

/* =================================================================
   Spacing Utilities
   ================================================================= */

.section-spacing {
  margin-bottom: var(--token-space-3xl);
}

.section-padding {
  padding: var(--token-space-xl);
}

/* =================================================================
   Flex Utilities
   ================================================================= */

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-start {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

/* =================================================================
   Mobile Touch Targets
   ================================================================= */

.mobile-touch-target {
  min-height: 44px;
  min-width: 44px;
}

@media (min-width: 768px) {
  .mobile-touch-target {
    min-height: auto;
    min-width: auto;
  }
}

/* =================================================================
   Truncate Text
   ================================================================= */

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.truncate-2-lines {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* =================================================================
   Dark Mode Utilities
   ================================================================= */

.theme-dark .card-base {
  background: rgba(30, 30, 30, 0.5);
  border-color: rgba(255, 255, 255, 0.1);
}

.theme-dark .card-base.clickable:hover {
  box-shadow: 0 var(--token-space-sm) var(--token-space-lg) rgba(0, 0, 0, 0.3);
}

/* =================================================================
   Animation Utilities
   ================================================================= */

.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.slide-in-from-bottom {
  animation: slideInFromBottom 0.3s ease-out;
}

@keyframes slideInFromBottom {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.rotating {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* =================================================================
   Icon Sizing Utilities - Standard Lucide Icon Sizes
   ================================================================= */

/* h-3 w-3 = 12px (0.75rem) - Small icons */
.h-3 {
  height: 0.75rem;
}

.w-3 {
  width: 0.75rem;
}

/* h-4 w-4 = 16px (1rem) - Default/Medium icons */
.h-4 {
  height: 1rem;
}

.w-4 {
  width: 1rem;
}

/* h-5 w-5 = 20px (1.25rem) - Large icons */
.h-5 {
  height: 1.25rem;
}

.w-5 {
  width: 1.25rem;
}

/* h-6 w-6 = 24px (1.5rem) - Extra large icons */
.h-6 {
  height: 1.5rem;
}

.w-6 {
  width: 1.5rem;
}

/* h-12 w-12 = 48px (3rem) - Hero icons */
.h-12 {
  height: 3rem;
}

.w-12 {
  width: 3rem;
}

/* Ensure icons don't shrink */
.h-3, .h-4, .h-5, .h-6, .h-12 {
  flex-shrink: 0;
}

.w-3, .w-4, .w-5, .w-6, .w-12 {
  flex-shrink: 0;
}
