/**
 * Unified Mobile-First Container System
 *
 * Standard breakpoints:
 * - Mobile: 320px - 639px (default, no media query)
 * - Tablet: 640px - 1023px
 * - Desktop: 1024px - 1439px
 * - Large Desktop: 1440px+
 */

/* CSS Variables for container positioning (hamburger menu fix) */
:root {
  --container-offset: 0px;
  --container-max-width: 100%;
}

/* Base container - mobile first */
.app-container {
  width: 100%;
  max-width: 100%;
  margin: 0 auto;
  padding: 0 var(--token-space-xl);
}

/* Tablet breakpoint */
@media (min-width: 640px) {
  :root {
    --container-max-width: 768px;
    --container-offset: calc((100vw - 768px) / 2);
  }

  .app-container {
    max-width: 768px;
    padding: 0 var(--token-space-3xl);
  }
}

/* Desktop breakpoint */
@media (min-width: 1024px) {
  :root {
    --container-max-width: 1200px;
    --container-offset: calc((100vw - 1200px) / 2);
  }

  .app-container {
    max-width: 1200px;
    padding: 0 var(--token-space-4xl);
  }
}

/* Large desktop breakpoint */
@media (min-width: 1440px) {
  :root {
    --container-max-width: 1280px;
    --container-offset: calc((100vw - 1280px) / 2);
  }

  .app-container {
    max-width: 1280px;
    padding: 0 var(--token-space-4xl);
  }
}

/* Specialized containers for specific use cases */

/* Wide container for data-heavy pages (entry lists, class lists) */
.app-container-wide {
  width: 100%;
  margin: 0 auto;
  padding: 0 var(--token-space-xl);
}

/* Ultra-narrow breakpoint for multi-window monitoring (320px-480px) */
@media (max-width: 480px) {
  .app-container-wide {
    padding: 0 var(--token-space-md);
    min-width: 280px; /* Absolute minimum for readability */
  }
}

/* Small mobile optimization (481px-639px) */
@media (min-width: 481px) and (max-width: 639px) {
  .app-container-wide {
    padding: 0 var(--token-space-lg);
  }
}

@media (min-width: 640px) {
  .app-container-wide {
    max-width: 768px;
    padding: 0 var(--token-space-3xl);
  }
}

@media (min-width: 1024px) {
  .app-container-wide {
    max-width: 1400px;
    padding: 0 var(--token-space-4xl);
  }

  .app-container-wide {
    --container-max-width: 1400px;
    --container-offset: calc((100vw - 1400px) / 2);
  }
}

@media (min-width: 1440px) {
  .app-container-wide {
    max-width: 1440px;
  }

  .app-container-wide {
    --container-max-width: 1440px;
    --container-offset: calc((100vw - 1440px) / 2);
  }
}

/* Narrow container for focused tasks (forms, scoresheets) */
.app-container-narrow {
  width: 100%;
  margin: 0 auto;
  padding: 0 var(--token-space-xl);
}

@media (min-width: 640px) {
  .app-container-narrow {
    max-width: 600px;
    padding: 0 var(--token-space-3xl);
  }
}

@media (min-width: 1024px) {
  .app-container-narrow {
    max-width: 800px;
    padding: 0 var(--token-space-4xl);
  }
}

/* Hamburger menu positioning is handled by inline styles in HamburgerMenu.tsx */

/* Component-level responsive utilities */
.mobile-only {
  display: block;
}

.tablet-up {
  display: none;
}

.desktop-up {
  display: none;
}

@media (min-width: 640px) {
  .mobile-only {
    display: none;
  }

  .tablet-up {
    display: block;
  }
}

@media (min-width: 1024px) {
  .desktop-up {
    display: block;
  }
}

/* Standard mobile-first spacing */
.section-spacing {
  margin-bottom: var(--token-space-xl);
}

@media (min-width: 640px) {
  .section-spacing {
    margin-bottom: var(--token-space-3xl);
  }
}

@media (min-width: 1024px) {
  .section-spacing {
    margin-bottom: var(--token-space-4xl);
  }
}

/* Touch-friendly interactive elements */
.touch-target {
  min-height: 44px;
  min-width: 44px;
}

@media (pointer: fine) {
  .touch-target {
    min-height: var(--token-space-4xl);
    min-width: var(--token-space-4xl);
  }
}