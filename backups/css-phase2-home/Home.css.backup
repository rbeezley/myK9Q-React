/* MyK9Show Home Dashboard - Apple-inspired Light/Dark Mode with Enhanced Outdoor Visibility */

/* CSS Variables - Enhanced for outdoor trial readability */
:root {
  /* Light theme */
  --background: #fefefe;
  --foreground: #0a0a0a;
  --card: #ffffff;
  --card-foreground: #0a0a0a;
  --muted: #f6f6f6;
  --muted-foreground: #6b7280;
  --border: #e5e7eb;
  --input: #f3f4f6;
  --primary: #2563eb;
  --primary-foreground: #ffffff;
  --secondary: #f1f5f9;
  --secondary-foreground: #0f172a;
  
  /* Enhanced text contrast for outdoor visibility */
  --text-primary: #0a0a0a;
  --text-secondary: #374151;
  --text-tertiary: #6b7280;
  
  /* MyK9Show brand colors */
  --brand-blue: #007AFF;
  --brand-purple: #5856D6;
  --success: #34C759;
  --warning: #FF9500;
  --error: #FF3B30;

  /* Standardized Class Status Colors */
  --status-none: #6b7280;
  --status-setup: #fef3c7;
  --status-briefing: #3b82f6;
  --status-break: #14b8a6;
  --status-start-time: #8b5cf6;
  --status-in-progress: #3b82f6;
  --status-completed: #059669;
  
  /* High contrast status colors */
  --success-contrast: #10b981;
  --warning-contrast: #c2410c;
  --error-contrast: #dc2626;
}

.theme-dark {
  /* Dark theme - Enhanced for Outdoor Visibility */
  --background: #1a1d23;
  --foreground: #ffffff;
  --card: #1a1d23;
  --card-foreground: #ffffff;
  --muted: #2a2a2a;
  --muted-foreground: #ffffff;
  --border: #4a5568;
  --input: #262626;
  --primary: #3b82f6;
  --primary-foreground: #ffffff;
  --secondary: #262626;
  --secondary-foreground: #ffffff;

  /* Enhanced text contrast for outdoor visibility */
  --text-primary: #ffffff;
  --text-secondary: #ffffff;
  --text-tertiary: #ffffff;

  /* High contrast status colors for dark mode */
  --success-contrast: #10b981;
  --warning-contrast: #fef3c7;
  --error-contrast: #ef4444;

  /* Dark mode status colors - enhanced brightness */
  --status-none: #9ca3af;
  --status-setup: #3b82f6;
  --status-briefing: #3b82f6;
  --status-break: #14b8a6;
  --status-start-time: #8b5cf6;
  --status-in-progress: #60a5fa;
  --status-completed: #10b981;
}

.home-container {
  height: 100vh;
  overflow: hidden;
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-family, -apple-system, BlinkMacSystemFont, "SF Pro Display", "SF Pro Text", system-ui, sans-serif);
  transition: background-color var(--token-transition-normal);
  display: flex;
  flex-direction: column;
  /* No bottom padding needed - using hamburger menu instead of bottom nav */
}

/* Sophisticated Header with Glass Morphism */
.home-header {
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: blur(20px);
  background: rgba(255, 255, 255, 0.8);
  border-bottom: 1px solid var(--border);
  padding: var(--token-space-lg) var(--token-space-3xl); /* Reduced from 1rem for more compact design */
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 56px; /* Reduced from 64px */
}

.theme-dark .home-header {
  background: rgba(26, 29, 35, 0.8);
}

.header-left,
.header-right {
  flex: 0 0 auto;
}

.header-center {
  flex: 1;
  text-align: center;
  margin: 0 var(--token-space-xl);
}

.header-center h1 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 590;
  color: var(--foreground);
  letter-spacing: -0.02em;
  line-height: 1.2;
}

/* Show Info Card with Glass Morphism */
.show-info {
  margin: var(--token-space-xl) var(--token-space-3xl);
  padding: var(--token-space-2xl) var(--token-space-3xl); /* Reduced vertical padding */
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border);
  border-radius: var(--token-radius-xl);
  box-shadow: var(--token-shadow-md);
  transition: all var(--token-transition-slow);
}

.theme-dark .show-info {
  background: rgba(26, 29, 35, 0.8);
  box-shadow: var(--token-shadow-md);
}

.show-info:hover {
  transform: translateY(-2px);
  box-shadow: var(--token-shadow-lg);
}

.theme-dark .show-info:hover {
  box-shadow: var(--token-shadow-lg);
}

.show-info h2 {
  margin: 0 0 var(--token-space-md) 0;
  font-size: 1.25rem;
  font-weight: 650;
  color: var(--foreground);
  line-height: 1.3;
  letter-spacing: -0.02em;
}

.show-date {
  margin: var(--token-space-sm) 0 0 0; /* Removed bottom margin */
  font-size: 1rem;
  font-weight: 500;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* User role styling moved to hamburger menu (.user-info) */

/* Active Trials Section with Enhanced Design */
.trials-section {
  padding: var(--token-space-xl) var(--token-space-3xl) var(--token-space-3xl); /* Added top padding for breathing room */
  position: relative;
  z-index: 1;
}

.trials-section h3 {
  margin: 0 0 var(--token-space-xl) 0;
  font-size: 1.125rem;
  font-weight: 590;
  color: var(--foreground);
  letter-spacing: -0.02em;
  line-height: 1.3;
}

.trials-scroll {
  display: flex;
  gap: var(--token-space-xl);
  overflow-x: auto;
  padding-bottom: var(--token-space-md);
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.trials-scroll::-webkit-scrollbar {
  display: none;
}

.trial-card {
  flex: 0 0 280px;
  background: var(--card);
  border: 2px solid var(--border);
  border-radius: var(--token-radius-xl);
  cursor: pointer;
  transition: all var(--token-transition-normal);
  box-shadow: var(--token-shadow-md);
  position: relative;
  color: var(--card-foreground);
  overflow: hidden;
}

.theme-dark .trial-card {
  background: var(--card);
  box-shadow: var(--token-shadow-md);
}

/* Left accent colors based on trial status - matching ClassList/EntryList patterns */
.trial-card.active {
  border-left: 4px solid var(--status-in-progress);
  border-color: var(--border);
  box-shadow: var(--token-shadow-md);
}

.trial-card.completed {
  border-left: 4px solid var(--status-completed);
}


.trial-card.upcoming {
  border-left: 4px solid var(--status-none);
}

.trial-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--token-shadow-xl);
  border-color: rgba(0, 122, 255, 0.2);
}

.theme-dark .trial-card:hover {
  box-shadow: var(--token-shadow-xl);
}

.trial-card:active {
  transform: scale(0.98);
}

.trial-content {
  padding: var(--token-space-lg);
}

.trial-details {
  display: flex;
  flex-direction: column;
  gap: var(--token-space-sm);
}

.trial-title {
  background: var(--accent-secondary);
  color: var(--accent-primary);
  padding: var(--token-space-sm) var(--token-space-md);
  border-radius: var(--token-radius-md);
  text-align: left;
}

.trial-name-number {
  font-size: 0.9375rem;
  font-weight: 600;
  line-height: 1.2;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 0.375rem;
}

.trial-icon {
  color: var(--accent-primary);
  opacity: 0.8;
}

.trial-date-line {
  margin: 0;
  font-size: 0.8125rem;
  color: var(--text-secondary);
  font-weight: 500;
  text-align: center;
  margin-bottom: 0;
}

.trial-progress {
  display: flex;
  flex-direction: column;
  gap: var(--token-space-2xs);
  padding: 0 var(--token-space-md);
}

.progress-row {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  font-size: 0.75rem;
  color: var(--muted-foreground);
  font-weight: 500;
  text-align: left;
  padding: var(--token-space-xs) 0;
}

.progress-row svg {
  color: var(--muted-foreground);
  flex-shrink: 0;
}

/* Trial Status Badge Styling */
.trial-status {
  padding: 6px 10px;
  border-radius: var(--token-radius-xl);
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: var(--token-shadow-sm);
}

.trial-status.active {
  background: var(--status-in-progress);
  color: white;
}

.trial-status.completed {
  background: var(--status-completed);
  color: white;
}


.trial-status.upcoming {
  background: var(--muted);
  color: var(--foreground);
  border: 2px solid var(--border);
}

/* Progress Icon Colors - Simple minimal style */
.progress-circle {
  border-radius: 0;
  border: none;
  background: none;
  padding: 0;
}

.progress-circle.completed {
  color: var(--status-completed);
}

.progress-circle.in-progress,
.progress-circle.active {
  color: var(--status-in-progress);
}

.progress-circle.upcoming {
  color: var(--text-tertiary);
}

/* Fix icon colors in progress circles - ultra specific targeting */
.trial-progress .progress-row .progress-circle svg,
.trial-progress .progress-row .progress-circle.active svg,
.trial-progress .progress-row .progress-circle.completed svg,
.trial-progress .progress-row .progress-circle.upcoming svg {
  color: var(--muted-foreground) !important;
  stroke: var(--muted-foreground) !important;
  fill: none !important;
  stroke-width: 2 !important;
}

.trial-progress .progress-row .progress-circle svg *,
.trial-progress .progress-row .progress-circle.active svg *,
.trial-progress .progress-row .progress-circle.completed svg *,
.trial-progress .progress-row .progress-circle.upcoming svg * {
  stroke: var(--muted-foreground) !important;
  color: var(--muted-foreground) !important;
  fill: none !important;
}

/* Additional targeting for Calendar and Users2 icons specifically */
.trial-progress .progress-row svg[data-lucide="calendar"],
.trial-progress .progress-row svg[data-lucide="users-2"] {
  color: var(--muted-foreground) !important;
  stroke: var(--muted-foreground) !important;
  fill: none !important;
}

.trial-progress .progress-row svg[data-lucide="calendar"] *,
.trial-progress .progress-row svg[data-lucide="users-2"] * {
  stroke: var(--muted-foreground) !important;
  color: var(--muted-foreground) !important;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

.trial-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--token-space-xl);
}

.trial-date-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: var(--token-space-sm);
}

.trial-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--token-space-md);
}

.trial-number {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--primary);
  background: rgba(0, 122, 255, 0.1);
  padding: var(--token-space-sm) var(--token-space-md);
  border-radius: var(--token-radius-sm);
  flex-shrink: 0;
}

.trial-info h3 {
  margin: 0 0 var(--token-space-md) 0; /* Added bottom margin for better spacing */
  font-size: 1.125rem; /* Slightly larger like entry cards */
  font-weight: 590;
  color: var(--foreground);
  line-height: 1.3;
  letter-spacing: -0.02em;
  transition: color var(--token-transition-normal);
}

.trial-card:hover .trial-info h3 {
  color: var(--primary);
}

.trial-date {
  font-size: var(--token-font-lg);
  color: var(--foreground);
  margin: 0;
  font-weight: var(--token-font-weight-semibold);
  letter-spacing: 0.025em;
  line-height: 1.3;
  display: flex;
  align-items: center;
  gap: var(--token-space-lg);
}

.trial-date svg {
  color: inherit !important;
  stroke: currentColor !important;
  fill: none !important;
}

.trial-date svg * {
  stroke: currentColor !important;
  color: inherit !important;
}

.trial-type {
  margin: 0;
  font-size: var(--token-font-sm);
  font-weight: var(--token-font-weight-bold);
  color: var(--muted-foreground);
  text-transform: uppercase;
  letter-spacing: 0.075em;
  line-height: 1.2;
  display: flex;
  align-items: center;
  gap: var(--token-space-sm);
}

.trial-type svg {
  color: var(--foreground) !important;
  stroke: var(--foreground) !important;
  fill: none !important;
}

.trial-type svg * {
  stroke: var(--foreground) !important;
  color: var(--foreground) !important;
}

.trial-progress {
  margin-top: 0.875rem;
}

.progress-row {
  display: flex;
  align-items: center;
  gap: var(--token-space-md);
  margin-top: var(--token-space-sm);
}

.progress-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 1;
  padding: var(--token-space-md);
  background: rgba(0, 0, 0, 0.03);
  border-radius: var(--token-radius-md);
  gap: var(--token-space-sm);
}

.theme-dark .progress-item {
  background: rgba(255, 255, 255, 0.05);
}

.progress-text {
  font-size: 0.75rem;
  color: var(--text-secondary);
  font-weight: 500;
  flex-grow: 1;
}

.progress-value {
  font-size: 0.9375rem; /* Slightly larger for emphasis */
  font-weight: 600;
  color: var(--foreground);
  font-variant-numeric: tabular-nums;
}

/* ========================================
   SEARCH AND SORT CONTROLS
   ======================================== */

/* Search controls header */
.search-controls-header {
  display: flex;
  align-items: center;
  padding: 0.75rem var(--token-space-3xl);
  background: var(--card);
  border-bottom: 1px solid var(--border);
  gap: 0.75rem;
  position: relative;
  z-index: 1;
}

.search-toggle-icon {
  background: none;
  border: none;
  color: var(--muted-foreground);
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 0.5rem;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-toggle-icon:hover {
  background: var(--muted);
  color: var(--foreground);
}

.search-toggle-icon.active {
  color: var(--primary);
  background: var(--muted);
  transform: rotate(180deg);
}

.search-controls-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--foreground);
}

/* Search results summary */
.search-results-header {
  padding: 0.5rem 1.5rem;
  background: var(--muted);
  border-bottom: 1px solid var(--border);
}

.search-results-summary {
  font-size: 0.875rem;
  color: var(--muted-foreground);
  text-align: center;
}

/* Collapsible search and sort container */
.search-sort-container {
  background: var(--card);
  border-bottom: 1px solid var(--border);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  z-index: 1;
}

.search-sort-container.collapsed {
  max-height: 0;
  padding: 0 1.5rem;
  border-bottom: none;
}

.search-sort-container.expanded {
  max-height: 300px;
  padding: 1rem 1.5rem;
}

.search-sort-container > * {
  transition: opacity 0.2s ease-in-out;
}

.search-sort-container.collapsed > * {
  opacity: 0;
}

.search-sort-container.expanded > * {
  opacity: 1;
}

/* Content wrapper for smooth transitions */
.search-sort-container.expanded {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

/* Search input wrapper */
.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 0.75rem;
  color: var(--muted-foreground);
  pointer-events: none;
}

.search-input-full {
  width: 100%;
  padding: 0.625rem 2.5rem 0.625rem 2.5rem;
  border: 1px solid var(--border);
  border-radius: 0.5rem;
  background: var(--background);
  color: var(--foreground);
  font-size: 0.875rem;
  transition: all 0.2s ease;
}

.search-input-full:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
}

.clear-search-btn {
  position: absolute;
  right: 0.5rem;
  background: none;
  border: none;
  color: var(--muted-foreground);
  cursor: pointer;
  padding: 0.25rem;
  border-radius: 0.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.clear-search-btn:hover {
  background: var(--muted);
  color: var(--foreground);
}

/* Sort controls */
.sort-controls {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  flex-wrap: nowrap;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.5rem 0.875rem;
  border: 1px solid var(--border);
  border-radius: 0.5rem;
  background: var(--secondary);
  color: var(--secondary-foreground);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
}

/* Favorites button - icon only */
.sort-btn.favorites-btn {
  padding: 0.5rem;
  flex-shrink: 0;
}

.sort-btn:hover {
  background: var(--accent);
  border-color: var(--accent);
}

.sort-btn.active {
  background: var(--primary);
  color: var(--primary-foreground);
  border-color: var(--primary);
}

/* Dark theme adjustments */
.theme-dark .search-controls-header {
  background: var(--card);
  border-bottom-color: var(--border);
}

.theme-dark .search-results-header {
  background: var(--muted);
}

.theme-dark .search-sort-container {
  background: var(--card);
}

/* Mobile optimizations for search/sort */
@media (max-width: 640px) {
  .sort-controls {
    gap: 0.375rem;
  }

  .sort-btn {
    padding: 0.375rem 0.625rem;
    font-size: 0.8125rem;
  }
}

@media (max-width: 480px) {
  .search-sort-container.expanded {
    padding: 0.5rem;
    max-height: 200px;
  }

  .search-input-full {
    padding: 0.5rem 0.5rem 0.5rem 2.25rem;
    font-size: 0.75rem;
  }

  .sort-btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
  }

  .sort-controls {
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
}

/* Enhanced Entry List Section */
.entry-list {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding: 0 var(--token-space-3xl) var(--token-space-4xl);
  position: relative;
  z-index: 1;
}

.entry-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: var(--token-space-lg);
  margin-bottom: var(--token-space-xl);
  position: relative;
  z-index: 1;
}

.entry-list-title {
  font-size: 1rem;
  font-weight: 590;
  color: var(--foreground);
  margin: 0;
  letter-spacing: -0.02em;
}

.entry-count {
  background: rgba(0, 0, 0, 0.05);
  border: 1px solid var(--border);
  border-radius: var(--token-radius-xl);
  padding: 0.375rem var(--token-space-lg);
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-secondary);
}

.theme-dark .entry-count {
  background: rgba(255, 255, 255, 0.05);
}

.favorites-filter-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: transparent;
  border: 2px solid var(--border);
  border-radius: var(--token-radius-lg);
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.favorites-filter-btn:hover {
  background: rgba(0, 0, 0, 0.05);
  border-color: var(--primary);
  color: var(--primary);
}

.theme-dark .favorites-filter-btn:hover {
  background: rgba(255, 255, 255, 0.1);
}

.favorites-filter-btn.active {
  background: var(--error);
  border-color: var(--error);
  color: white;
}

.favorites-filter-btn.active:hover {
  background: #dc2626;
  border-color: #dc2626;
}

.no-favorites {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border);
  border-radius: var(--token-radius-xl);
  padding: 3rem var(--token-space-4xl);
  text-align: center;
  box-shadow: var(--token-shadow-md);
}

.theme-dark .no-favorites {
  background: rgba(26, 29, 35, 0.8);
  box-shadow: var(--token-shadow-md);
}

.no-favorites-icon {
  width: 3rem;
  height: 3rem;
  color: var(--text-tertiary);
  margin: 0 auto var(--token-space-xl);
}

.no-favorites h3 {
  margin: 0 0 var(--token-space-md) 0;
  font-size: 1.125rem;
  font-weight: 590;
  color: var(--foreground);
  line-height: 1.3;
}

.no-favorites p {
  margin: 0;
  font-size: 1rem;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* Loading Skeleton Styles */
.loading-skeleton {
  padding: 1rem 0;
}

.skeleton-header {
  margin-bottom: 1.5rem;
}

.skeleton-text {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 4px;
}

.theme-dark .skeleton-text {
  background: linear-gradient(90deg, #2a2a2a 25%, #3a3a3a 50%, #2a2a2a 75%);
  background-size: 200% 100%;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.skeleton-title {
  height: 24px;
  width: 200px;
}

.skeleton-grid {
  display: grid;
  gap: 1rem;
  grid-template-columns: repeat(3, 1fr);
}

@media (max-width: 1200px) {
  .skeleton-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .skeleton-grid {
    grid-template-columns: 1fr;
  }
}

.skeleton-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border);
  border-radius: var(--token-radius-lg);
  padding: 0.875rem 1rem;
  box-shadow: var(--token-shadow-md);
}

.theme-dark .skeleton-card {
  background: rgba(26, 29, 35, 0.8);
}

.skeleton-card-content {
  display: flex;
  align-items: center;
  gap: 0.875rem;
}

.skeleton-avatar {
  width: 56px;
  height: 56px;
  border-radius: 1rem;
  background: linear-gradient(90deg, #e0e0e0 25%, #d0d0d0 50%, #e0e0e0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  flex-shrink: 0;
}

.theme-dark .skeleton-avatar {
  background: linear-gradient(90deg, #3a3a3a 25%, #4a4a4a 50%, #3a3a3a 75%);
  background-size: 200% 100%;
}

.skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.skeleton-name {
  height: 18px;
  width: 70%;
}

.skeleton-breed {
  height: 16px;
  width: 85%;
}

.skeleton-handler {
  height: 14px;
  width: 60%;
}

.entry-grid {
  display: grid;
  gap: var(--token-space-lg);
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
}

.entry-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border);
  border-radius: var(--token-radius-lg);
  padding: 0.875rem 1rem;
  cursor: pointer;
  transition: all var(--token-transition-slow);
  box-shadow: var(--token-shadow-md);
  position: relative;
  overflow: hidden;
}

.theme-dark .entry-card {
  background: rgba(26, 29, 35, 0.8);
  box-shadow: var(--token-shadow-md);
}

.entry-card::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.03) 0%, transparent 100%);
  opacity: 0;
  transition: opacity var(--token-transition-slow);
}

.entry-card:hover::before {
  opacity: 1;
}

.entry-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--token-shadow-lg);
  border-color: rgba(0, 122, 255, 0.3);
}

.theme-dark .entry-card:hover {
  box-shadow: var(--token-shadow-lg);
}

.entry-card:active {
  transform: scale(0.98);
}

.entry-card.scored {
  border-left: 3px solid var(--success-contrast);
}

.entry-content {
  display: flex;
  align-items: center;
  gap: 0.875rem;
  position: relative;
}

.entry-armband {
  flex-shrink: 0;
}

/* Armband badge styling moved to Badge.css component */

.entry-details {
  flex: 1;
  min-width: 0;
  padding-right: 40px; /* Space for heart button */
}

.entry-name {
  margin: 0 0 0.25rem 0;
  font-size: 1rem;
  font-weight: 590;
  color: var(--foreground);
  line-height: 1.3;
  letter-spacing: -0.02em;
  transition: color var(--token-transition-normal);
}

.entry-card:hover .entry-name {
  color: var(--primary);
}

.entry-breed {
  margin: 0 0 0.25rem 0;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-secondary);
  line-height: 1.3;
}

.entry-handler {
  margin: 0;
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--text-tertiary);
  line-height: 1.3;
}

.entry-class {
  display: none; /* Hide class info on home page */
}

.entry-actions {
  position: absolute;
  top: 0;
  right: 0;
}

.score-status {
  width: 8px;
  height: 8px;
  border-radius: var(--token-radius-full);
  background: var(--success-contrast);
  box-shadow: 0 0 0 3px rgba(4, 120, 87, 0.3);
}

.favorite-button {
  background: transparent;
  border: 2px solid transparent;
  border-radius: 0.5rem;
  padding: 0.5rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--token-transition-normal);
  color: var(--text-tertiary);
  min-width: 40px;
  min-height: 40px;
}

.favorite-button:hover {
  background: rgba(0, 0, 0, 0.05);
  color: var(--foreground);
}

.theme-dark .favorite-button:hover {
  background: rgba(255, 255, 255, 0.1);
}

.favorite-button:active {
  transform: scale(0.95);
}

.favorite-button.favorited {
  color: var(--error);
}

.favorite-icon {
  width: 1.25rem;
  height: 1.25rem;
  transition: all var(--token-transition-normal);
}

.favorite-button.favorited .favorite-icon {
  fill: currentColor;
}

/* Hamburger Menu styles moved to HamburgerMenu.css for consistency */

.menu-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: var(--token-space-3xl);
  border-bottom: 1px solid var(--border);
}

.menu-header-info {
  flex: 1;
}

.menu-header h3 {
  margin: 0 0 var(--token-space-sm) 0;
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--foreground);
}

.show-info-detail {
  margin: 0 0 var(--token-space-md) 0;
  font-size: 0.875rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.user-info {
  margin: 0;
  font-size: 0.8125rem;
  color: var(--muted-foreground);
  font-weight: 400;
}

.user-info span {
  color: var(--primary);
  font-weight: 500;
}

.menu-close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: transparent;
  border: none;
  border-radius: var(--token-radius-sm);
  color: var(--muted-foreground);
  cursor: pointer;
  transition: all var(--token-transition-fast);
}

.menu-close:hover {
  background: var(--muted);
  color: var(--foreground);
}

.menu-items {
  flex: 1;
  padding: var(--token-space-xl) 0;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: var(--token-space-lg);
  width: 100%;
  padding: 0.875rem var(--token-space-3xl);
  background: transparent;
  border: none;
  color: var(--foreground);
  font-size: 0.9375rem;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--token-transition-fast);
  text-align: left;
  min-height: 48px; /* Maintain touch target */
}

.menu-item:hover {
  background: var(--muted);
}

.menu-item.active {
  background: rgba(0, 122, 255, 0.1);
  color: var(--primary);
  font-weight: 600;
}

.menu-item.logout {
  color: var(--destructive);
  margin-top: auto;
}

.menu-item.logout:hover {
  background: rgba(239, 68, 68, 0.1);
}

.menu-icon {
  width: 1.25rem;
  height: 1.25rem;
  flex-shrink: 0;
}

.menu-divider {
  height: 1px;
  background: var(--border);
  margin: var(--token-space-md) var(--token-space-3xl);
}

/* Responsive Design Optimizations */
@media (max-width: 640px) {
  .home-header {
    padding: var(--token-space-lg) var(--token-space-xl); /* More compact on mobile */
  }
  
  .header-center h1 {
    font-size: 1.125rem;
  }
  
  .show-info {
    margin: var(--token-space-xl);
    padding: var(--token-space-2xl);
  }
  
  .show-info h2 {
    font-size: 1.125rem;
  }
  
  .trials-section {
    padding: var(--token-space-xl); /* Consistent padding on mobile */
  }

  .trials-scroll {
    gap: var(--token-space-xl); /* Maintain good spacing between cards */
    padding: 0; /* No additional padding - let trials-section handle it */
  }
  
  .trial-card {
    flex: 0 0 calc(100vw - 8rem); /* Show half of next card */
    min-width: 240px; /* Minimum width for readability */
    max-width: 280px; /* Maximum width to ensure partial visibility of next card */
  }

  .trial-content {
    padding: var(--token-space-md);
  }

  .trial-info {
    padding: var(--token-space-3xl); /* Better mobile padding */
  }
  
  .trial-title {
    font-size: 1.125rem; /* Slightly smaller on mobile but still readable */
  }
  
  .trial-metadata {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--token-space-sm);
  }
  
  .trial-separator {
    display: none; /* Hide separators on mobile for cleaner look */
  }
  
  .metric-label {
    font-size: 0.75rem; /* Adjusted for mobile */
  }
  
  .metric-percentage {
    font-size: 1rem; /* Slightly smaller on mobile */
  }
  
  .progress-grid {
    gap: var(--token-space-lg); /* Reduced gap on mobile */
  }
  
  /* Compact mobile tabs to save screen space */
  .entry-tabs {
    margin: 0 var(--token-space-xl) var(--token-space-lg);
    padding: var(--token-space-xs); /* Reduced from 0.25rem */
  }
  
  .tab-button {
    min-height: 40px; /* Reduced from 52px */
    padding: var(--token-space-md) var(--token-space-sm); /* Reduced padding */
  }
  
  .tab-text {
    display: none;
  }
  
  .tab-icon {
    width: 1.25rem; /* Slightly larger since no text */
    height: 1.25rem;
  }
  
  /* Align search controls with everything else - consistent 12px left margin */
  .search-controls-header {
    padding-left: var(--token-space-lg);  /* 12px - matches .home-header, .trials-section, .entry-list */
    padding-right: var(--token-space-lg);
  }

  /* Button padding stays the same on mobile for visual spacing */
  .search-toggle-icon {
    padding: 0.5rem;
    margin-left: 0; /* No extra margin needed */
  }

  .entry-list {
    padding: 0 var(--token-space-xl) var(--token-space-xl); /* Consistent left/right padding */
    overflow: hidden; /* Prevent outer scrollbar */
  }
  
  .entry-grid {
    grid-template-columns: 1fr;
    gap: var(--token-space-lg); /* Reduced gap for more content */
  }
  
  /* Responsive armband badge sizing handled by Badge.css component */
  
  .entry-name {
    font-size: 0.9375rem;
  }
  
  .entry-breed {
    font-size: 0.8125rem;
  }
  
  .entry-handler {
    font-size: 0.6875rem;
  }
  
  /* Mobile hamburger menu optimizations */
  .hamburger-menu {
    width: 260px; /* Slightly narrower on mobile */
  }
  
  /* Remove bottom padding since no bottom nav */
  .home-container {
    padding-bottom: var(--token-space-xl); /* Just normal content padding */
    overflow: hidden; /* Ensure no outer scrollbar on mobile/tablet */
  }
}

@media (min-width: 640px) {
  .entry-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--token-space-xl);
  }

  .tab-text {
    display: inline;
  }
}

@media (min-width: 1024px) {
  .entry-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--token-space-2xl);
  }
  
  .trials-scroll {
    gap: var(--token-space-3xl);
  }
  
  .trial-card {
    flex: 0 0 360px; /* Even more space on desktop */
  }
  
  .trial-title {
    font-size: 1.375rem; /* Larger title on desktop */
  }
  
  .progress-grid {
    gap: var(--token-space-2xl); /* More spacing on desktop */
  }
}

/* Theme Toggle */
.theme-toggle {
  position: fixed;
  top: var(--token-space-xl);
  right: var(--token-space-xl);
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--token-radius-full);
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all var(--token-transition-normal);
  box-shadow: var(--token-shadow-md);
  z-index: 1000;
  font-size: 1.25rem;
}

.theme-dark .theme-toggle {
  box-shadow: var(--token-shadow-md);
}

.theme-toggle:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.theme-dark .theme-toggle:hover {
  box-shadow: var(--token-shadow-lg);
}

.theme-toggle:active {
  transform: scale(0.95);
}

/* Performance Optimizations */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
  
  .trial-status-indicator {
    animation: none !important;
  }
  
  .status-dot {
    animation: none !important;
  }
  
  .progress-fill::after {
    animation: none !important;
  }
}

/* ===== ANNOUNCEMENT SUMMARY CARD STYLES - EASILY REMOVABLE SECTION START ===== */
@keyframes ticker-scroll {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

.announcements-ticker-container {
  margin: var(--token-space-xl);
  margin-bottom: 0;
  overflow: hidden;
  border-radius: var(--token-radius-lg);
  box-shadow: var(--token-shadow-sm);
}

.ticker-background {
  display: flex;
  align-items: center;
  background: var(--primary);
  color: white;
  cursor: pointer;
  transition: all var(--token-transition-fast);
  position: relative;
}

.ticker-background:hover {
  background: var(--primary);
  filter: brightness(1.1);
  box-shadow: var(--token-shadow-md);
}

.ticker-icon {
  width: 1.125rem;
  height: 1.125rem;
  color: white;
  flex-shrink: 0;
  margin: var(--token-space-lg);
  z-index: 2;
}

.ticker-content {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  position: relative;
  height: 48px;
  display: flex;
  align-items: center;
}

.ticker-scroll {
  display: inline-flex;
  white-space: nowrap;
  animation: ticker-scroll 30s linear infinite;
  animation-play-state: running;
}

.ticker-background:hover .ticker-scroll {
  animation-play-state: paused;
}

.ticker-item {
  font-size: 0.875rem;
  font-weight: 500;
  color: white;
  line-height: 1.4;
  padding-right: var(--token-space-4xl); /* Much more space after each item */
}

.ticker-time {
  color: rgba(255, 255, 255, 0.75);
  font-weight: 400;
  font-size: 0.8125rem;
  margin-left: var(--token-space-sm);
}

.ticker-separator {
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
  padding: 0 var(--token-space-xl); /* More space around the bullet separator */
}

.ticker-arrow {
  color: white;
  flex-shrink: 0;
  margin: var(--token-space-lg);
  z-index: 2;
  transition: transform var(--token-transition-fast);
}

.ticker-background:hover .ticker-arrow {
  transform: translateX(2px);
}

/* Urgent ticker gets special treatment */
.ticker-background.urgent {
  background: var(--error);
  animation: urgent-flash 1s ease-in-out infinite alternate;
}

@keyframes urgent-flash {
  0% { filter: brightness(1); }
  100% { filter: brightness(1.15); }
}

@media (max-width: 640px) {
  .announcements-ticker-container {
    margin: var(--token-space-xl);
    margin-bottom: 0;
  }

  .ticker-icon {
    width: 1rem;
    height: 1rem;
    margin: var(--token-space-md);
  }

  .ticker-arrow {
    margin: var(--token-space-md);
  }

  .ticker-item {
    font-size: 0.8125rem;
  }

  .ticker-time {
    font-size: 0.75rem;
  }

  .ticker-content {
    height: 40px;
  }

  .ticker-scroll {
    animation-duration: 25s; /* Slightly faster on mobile */
  }
}

/* Pause animation on reduced motion */
@media (prefers-reduced-motion: reduce) {
  .ticker-scroll {
    animation: none !important;
    transform: translateX(0) !important;
  }
}
/* ===== ANNOUNCEMENT SUMMARY CARD STYLES - EASILY REMOVABLE SECTION END ===== */

/* Smooth transitions for theme switching */
* {
  transition:
    background-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    border-color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94),
    box-shadow 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}.entry-grid-virtual {
  flex: 1;
  min-height: 400px;
  overflow: auto;
}

/* Scrollable content wrapper - contains everything that can scroll */
.home-scrollable-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-height: 0;
}

/* Make trials section and search controls fixed size */
.trials-section,
.search-controls-header,
.search-sort-container,
.search-results-header {
  flex-shrink: 0;
}
