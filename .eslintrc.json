{
  "root": true,
  "env": { 
    "browser": true, 
    "es2020": true 
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": ["dist", "coverage", ".eslintrc.json"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "react-hooks/exhaustive-deps": "off",

    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='indexedDB'][callee.property.name='open']",
        "message": "Do not use raw indexedDB.open(). Use the 'idb' library via @/utils/indexedDB or ReplicatedTable base class instead."
      },
      {
        "selector": "MemberExpression[object.name='window'][property.name='indexedDB']",
        "message": "Do not use window.indexedDB directly. Use the 'idb' library via @/utils/indexedDB or ReplicatedTable base class instead."
      }
    ],

    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["**/utils/indexedDB"],
            "importNames": ["db", "IndexedDBManager"],
            "message": "Replication code should extend ReplicatedTable instead of using the raw IndexedDB wrapper. Only legacy code (stores, services) should import from utils/indexedDB."
          }
        ]
      }
    ]
  },

  "overrides": [
    {
      "files": ["src/services/replication/**/*.ts", "src/services/replication/**/*.tsx"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "@/utils/indexedDB",
                "message": "Replication code MUST extend ReplicatedTable base class, not use utils/indexedDB directly."
              },
              {
                "name": "../../utils/indexedDB",
                "message": "Replication code MUST extend ReplicatedTable base class, not use utils/indexedDB directly."
              }
            ]
          }
        ]
      }
    }
  ]
}